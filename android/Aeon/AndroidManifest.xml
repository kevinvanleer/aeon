<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="vanleer.android.aeon"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="10" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:vmSafeMode="true" android:debuggable="true">
        <uses-library android:name="com.google.android.maps" />
        <activity android:name=".AeonActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Itinerary" android:label="@string/itinerary_title" />
        <activity android:name=".PlacesSearchActivity" android:label="@string/add_destination_title" />
        <activity android:name=".DestinationScheduleActivity" android:label="@string/destination_schedule_title" />
    </application>
    
</manifest>