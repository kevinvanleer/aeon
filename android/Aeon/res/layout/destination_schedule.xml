<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/checkBox_arrivalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_arrivalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrival Time"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <TimePicker
        android:id="@+id/timePicker_arrivalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/checkBox_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <TimePicker
        android:id="@+id/timePicker_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/checkBox_departureTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_departureTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departure Time"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <TimePicker
        android:id="@+id/timePicker_departureTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:baselineAligned="true" android:orientation="horizontal">
        <LinearLayout android:id="@+id/linearLayout2" android:layout_height="match_parent" android:orientation="vertical" android:layout_width="0dp" android:layout_weight="1"></LinearLayout>
        <Button android:text="Done" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="3" android:layout_marginTop="10dp" android:id="@+id/button_destinationScheduleDone"></Button>
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:id="@+id/linearLayout3" android:layout_height="match_parent" android:layout_weight="1"></LinearLayout>
    </LinearLayout>
    
</LinearLayout>
